# Development Environment Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/jobscrapper_dev
DB_NAME=jobscrapper_dev

# Security (use weak keys for development only)
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=dev-session-secret

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,chrome-extension://

# API Configuration
API_BASE_URL=http://localhost:5000/api
WS_BASE_URL=ws://localhost:5000

# Rate Limiting (more lenient for development)
RATE_LIMIT_LINKEDIN=60
RATE_LIMIT_INDEED=60
RATE_LIMIT_GLASSDOOR=60
RATE_LIMIT_GOOGLE_JOBS=60
RATE_LIMIT_ZIPRECRUITER=60
RATE_LIMIT_MONSTER=60

# Stealth Settings (faster for development)
STEALTH_DELAY_MIN=500
STEALTH_DELAY_MAX=1500
STEALTH_RANDOM_DELAY=true

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
ENABLE_PERFORMANCE_MONITORING=true

# Development Features
DEBUG=true
USE_MOCK_DATA=false
DISABLE_AUTH=false
DETAILED_ERRORS=true

# Backup
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# Cache
CACHE_TTL=1800
ENABLE_QUERY_CACHE=true
