{
  "name": "jobscrapper-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for automated job scraping and application with MERN stack backend",
  "main": "index.js",  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run build:extension:watch\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build:extension": "webpack --mode production",
    "build:extension:watch": "webpack --mode development --watch",
    "build": "npm run build:extension && cd backend && npm run build && cd ../frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:mocks": "jest tests/mocks",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint extension/src/**/*.js tests/**/*.js",
    "lint:fix": "eslint extension/src/**/*.js tests/**/*.js --fix"
  },
  "keywords": [
    "chrome-extension",
    "job-scraping",
    "automation",
    "mern-stack"
  ],
  "author": "Your Name",
  "license": "MIT",  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "babel-loader": "^9.1.3",
    "chrome-mock": "^1.0.5",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "jest-puppeteer": "^9.0.0",
    "jsdom": "^22.1.0",
    "msw": "^1.2.1",
    "nock": "^13.3.1",
    "puppeteer": "^20.3.0",
    "sinon": "^15.1.0",
    "sinon-chrome": "^3.0.1",
    "style-loader": "^3.3.3",
    "supertest": "^6.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },  "dependencies": {
    "axios": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/extension/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "extension/src/**/*.{js,jsx}",
      "backend/**/*.js",
      "!extension/src/**/*.config.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 10000,
    "verbose": true
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }],
      "@babel/preset-react"
    ]
  }
}
